{
    "name": "php-censor/common",
    "description": "PHP Censor Common Library",
    "minimum-stability": "stable",
    "type": "library",
    "keywords": [
        "php",
        "php-censor",
        "ci-server",
        "testing",
        "self-hosted",
        "open-source",
        "ci",
        "continuous integration"
    ],
    "homepage": "https://php-censor.info",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Dmitry Khomutov",
            "email": "poisoncorpsee@gmail.com",
            "homepage": "https://corpsee.com",
            "role": "PHP Censor developer"
        }
    ],
    "support": {
        "issues": "https://github.com/php-censor/common/issues",
        "source": "https://github.com/php-censor/common"
    },
    "autoload": {
        "psr-4": {
            "PHPCensor\\Common\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\PHPCensor\\Common\\": "tests/src"
        }
    },
    "require": {
        "php":                     ">=8.1.0",
        "ext-json":                "*",
        "psr/container":           "^1.1",
        "symfony/mailer":          "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit":                     "^9.5",
        "friendsofphp/php-cs-fixer":           "^3.4",
        "infection/infection":                 "^0.25",
        "vimeo/psalm":                         "^4.16",
        "phpmd/phpmd":                         "^1.5",
        "sebastian/phpcpd":                    "^6.0",
        "phploc/phploc":                       "^7.0",
        "php-parallel-lint/php-parallel-lint": "^1.3"
    },
    "extra": {
        "platform": {
            "php": "8.1.*"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    }
}
